{
    // tuto : http://code.tutsplus.com/tutorials/developing-google-chrome-extensions--net-33076

    // Required
    "manifest_version": 2,
    "minimum_chrome_version": "42",

    "version": "1.0",
    "version_name": "1.0 dev",

    "name": "davask web limited - chrome bookmarker",
    "short_name": "bookmarker",

    "author": "david asquiedge - davaskweblimited.com",

    // Recommended
    "default_locale": "en",
    "current_locale": "en",

    "description": "My missing bookmark manager",

    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },

   "background": {
       "persistent": false,
       "scripts": [
          "js/jquery-2.0.3.min.js",
          "js/dwl-bookmarker.js",
   //        "js/angular.min.js",
   //        "js/dwl-controller.js",
          "js/background.js"
       ]
   },
   "omnibox": {
       "keyword" : "dwl"
   },

    // extension icon outside omnibox
    "browser_action": {
        "default_icon": {
            "19": "img/icon48.png",
            "38": "img/icon48.png"
        },
        "default_title": "BookMarker",
        "default_popup": "templates/popup.html"
    },

    // extension icon inside omnibox
    // "page_action": {
    //     "default_icon": {
    //         "19": "img/icon48.png",
    //         "38": "img/icon48.png"
    //     },
    //     "default_title": "BookMarker",
    //     "default_popup": "templates/popup.html"
    // },

   "chrome_url_overrides": {
   //    "bookmarks": "templates/bookmarks.html",
       // "newtab": "templates/newtab.html"
   },

   "options_page": "templates/options.html",
   "devtools_page": "templates/devtools.html",

   "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/content.js"]
    }],


    // "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "content_security_policy": "default-src 'self'; style-src 'self' 'unsafe-inline';" ,

    "offline_enabled": true,

   "permissions": [
      "activeTab",
      "bookmarks",
      "chrome://favicon/",
      "identity",
      "identity.email",
      "management",
      "notifications",
      "storage",
      "tabs",
      // "bookmarkManagerPrivate",
      // {
      //    "fileSystem": [
      //        "write"
      //    ]
      // },
      // "metricsPrivate",
      // "preferencesPrivate",
      "*://*.google.com/*"
   ],

   "optional_permissions": [ "http://*/", "https://*/" ],

    "web_accessible_resources": [
        "img/icon128.png"
    ]
}